{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": ["./src/index.d.ts"],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "target": "ES6",
        "lib": ["ES2024","DOM","DOM.Iterable"]
    },
    "include": [
        "src/**/*"
    ]
}